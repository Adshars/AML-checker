# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=<REPLACE_WITH_STRONG_PASSWORD>
MONGO_PORT=27017
MONGO_DB_NAME=auth_db

# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=<REPLACE_WITH_STRONG_PASSWORD>
POSTGRES_DB=core_db
POSTGRES_PORT=5432

# Auth Service
JWT_SECRET=<REPLACE_WITH_LONG_RANDOM_SECRET_MIN_32_CHARS>
REFRESH_TOKEN_SECRET=<REPLACE_WITH_LONG_RANDOM_SECRET_MIN_32_CHARS>
PORT_AUTH=3002

# OpenSanctions / Yente
YENTE_PORT=8000

# API Gateway
GATEWAY_PORT=8080
# SECURITY: Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000,http://localhost:5173

# Email Service
EMAIL_SERVICE=ethereal
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=<REPLACE_WITH_EMAIL_USER>
EMAIL_PASS=<REPLACE_WITH_EMAIL_PASSWORD>

# Frontend URL
FRONTEND_URL=http://localhost

# Yente (OpenSanctions)
YENTE_TITLE=Local Compliance API
YENTE_MANIFEST=/manifest.yml
YENTE_UPDATE_DATA=true

# Elasticsearch
ES_DISCOVERY_TYPE=single-node
ES_SECURITY_ENABLED=false
ES_JAVA_OPTS=-Xms1g -Xmx1g

# Frontend
FRONTEND_CONTAINER_NAME=aml-checker-frontend
